run = "npm start"

[deployment]
schemaVersion = 2            # required
startCommand   = "npm start" # uses script below
healthcheckPath = "/health"  # Express handler returns 200
readinessTimeout = 60        # seconds before Deploy gives up

# Only ONE port mapping: app binds to $PORT inside container
[[ports]]
localPort    = 5000          # matches process.env.PORT in server
externalPort = 80            # public
[nix]
packages = ["git"]
channel = "stable-24_05"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Todo App Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production Build"

[[workflows.workflow]]
name = "Todo App Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host 0.0.0.0 --port 5000 --force"
waitForPort = 5000

[[workflows.workflow]]
name = "Production Build"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"
